@font-face 
    font-family: 'Fraunces'
    src: url(../fonts/fraunces/Fraunces-VariableFont_SOFT,WONK,opsz,wght.ttf) format('truetype')

@font-face 
    font-family: 'Manrope'
    src: url(../fonts/manrope/Manrope-VariableFont_wght.ttf) format('truetype')

heading_L()
    font-family: 'Fraunces', sans-serif
    font-size: clamp(36px, 9vw,80px)
    line-height: 1
    font-weight: 500

heading_M()
    font-family: 'Fraunces', sans-serif
    font-size: 56px
    line-height: 1.8
    font-weight: 600

heading_S()
    font-family: 'Fraunces', sans-serif
    font-size: clamp(20px,3vw,32px)
    line-height: 1.8
    font-weight: 600

body_text()
    font-family: 'Manrope', sans-serif
    font-size: clamp(16px,1vw,18px)
    line-height: 1.6
    font-weight: 500

dark-purple = #24053E
davy-grey = #584D62
eucaplyptus = #44FFA1
ghost-white = #FCF8FF
white = #FFFFFF
body
    margin: 0
    padding: 0
    box-sizing: border-box
header
    background: dark-purple
    display: flex
    justify-content: space-between
    flex-direction: column

#logo-container
    display: flex
    justify-content: space-between
    margin-left:auto
    margin-right: auto
    max-width: 1110px
    img
        max-width: 95px
    #login-btn
        body_text()
        font-weight: bold
        background-color: dark-purple
        color: white
        cursor: pointer
        transition-duration: 0.5s
        padding: 0
        padding-bottom: 4px
        border: none
        border-bottom: 3px solid eucaplyptus
        &:hover
            color: eucaplyptus
    padding-top: 40px
    margin-bottom: 70px
    padding-left: 15px
    padding-right: 15px
    
    @media (min-width:768px)
        padding-left: 50px
        padding-right: 50px  
    @media (min-width:992)
        padding-left: 100px
        padding-right: 100px 
      
#slogan
    display: flex
    flex-direction: column
    overflow: hidden
    h1
        heading_L()
        text-align: center
        margin: 0
        color white
        span
            position: relative
            .underline
                width: 100%
                position: absolute
                bottom: 0.6vw
                left: 0
                border-bottom: 3px solid eucaplyptus
    #slogan-container
        position: relative
        .bg-pattern
            position: absolute
            @media (max-width:576px)
                opacity: 0
        .pos1
            left:-30vw
            top:-30%
            @media (min-width:992px)
                left: -10vw
            @media (min-width:1400px)
                left: 10vw
        .pos2
            right:-10vw
            bottom:-110%
            @media (min-width:992px)
                right: 0
            @media (min-width:1400px)
                right: 10vw
    #learn-btn
        body_text()
        margin-top: 30px
        margin-bottom: 30px
        margin-left: auto
        margin-right: auto
        background-color: eucaplyptus
        color: dark-purple
        cursor: pointer
        transition-duration: 0.5s
        padding: 10px
        padding-left: 20px
        padding-right: 20px
        border: 2px solid eucaplyptus
        font-weight: bold
        &:hover
            color: eucaplyptus
            background-color: dark-purple

#image-container
    position: relative
    margin-top: 15px
    height: 100%
    display: flex
    justify-content: center
    align-items: center
    .custom-shape-divider-bottom-1688220562
        position: absolute;
        bottom: 39.5%;
        left: -20%;
        width: 120%;
        overflow:hidden;
        line-height: 0;
        svg 
            position: relative;
            display: block;
            width: 120%;
            height: 95px;
        .shape-fill 
            fill: #FCF8FF;  
    .divider-spacer
        position: absolute
        bottom: 0
        height: 40%
        width: 100%
        background: ghost-white
    #hero-img 
        padding-left: 10px
        z-index: 10
        width: 250px
        @media (min-width:350px)
            width: 320px
        @media (min-width:768px)
            width: 500px  
            padding-left: 15px  
        @media (min-width:1200px)
            width: 770px   
            padding-left: 20px  


#body-container 
    background-color: ghost-white
    padding-top: 40px
    color:dark-purple
    padding-left: 10vw
    padding-right: 10vw
    display:flex
    flex-direction: column
    justify-content: space-evenly
    align-items: center
    @media (min-width:993px)
        align-items: flex-start
        flex-direction: row
        padding-left: 0
        padding-right: 0
    .part-wrapper
        display:flex
        justify-content: center
        align-items: center
        margin-top: 2vh
        margin-bottom: 2vh
        // gap: 0px 100px
        flex-direction: column
        max-width: 300px
        @media (min-width:500px) and (max-width 992px)
            max-width: 700px
            flex-direction: row
        
    .number-part
        // flex-grow: 1
        heading_S()
        flex: 0 0 calc(clamp(20px,3vw,32px)*2)
        width: calc(clamp(20px,3vw,32px)*2)
        height: calc(clamp(20px,3vw,32px)*2)
        border-radius: 50%
        text-align: center
        border: 2px solid dark-purple
        @media (min-width:500px) and (max-width 992px)
            align-self: flex-start
            margin-top:60px
        
    .letter-part
        // max-width: 400px
        text-align: center
        h2
            heading_S()
            font-size: clamp(20px,2.7vw,32px)
        p 
            body_text()
            
        @media (min-width:500px) and (max-width 992px)
            padding-left: 5vw
            
            text-align: left
        
