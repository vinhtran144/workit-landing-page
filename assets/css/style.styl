@font-face 
    font-family: 'Fraunces'
    src: url(../fonts/fraunces/Fraunces-VariableFont_SOFT,WONK,opsz,wght.ttf) format('truetype')

@font-face 
    font-family: 'Manrope'
    src: url(../fonts/manrope/Manrope-VariableFont_wght.ttf) format('truetype')

heading_L()
    font-family: 'Fraunces', sans-serif
    font-size: clamp(36px, 9vw,80px)
    line-height: 1
    font-weight: 500

heading_M()
    font-family: 'Fraunces', sans-serif
    font-size: clamp(25px,8vw,48px)
    line-height: 1.8
    font-weight: 500

heading_S()
    font-family: 'Fraunces', sans-serif
    font-size: clamp(20px,3vw,32px)
    line-height: 1.8
    font-weight: 600

body_text()
    font-family: 'Manrope', sans-serif
    font-size: clamp(16px,1vw,18px)
    line-height: 1.6
    font-weight: 500

custom-bottom-divier(y-offset, fill-color)
    // function to set customized divider, generated by https://www.shapedivider.app/
    .custom-shape-divider-bottom-1688220562
        position: absolute;
        bottom: y-offset;
        left: -20%;
        width: 120%;
        overflow:hidden;
        line-height: 0;
        svg 
            position: relative;
            display: block;
            width: 120%;
            height: 95px;
        .shape-fill 
            fill: fill-color;  
    .divider-spacer
        position: absolute
        bottom: 0
        height: y-offset+0.5%
        width: 100%
        background: fill-color


dark-purple = #24053E
davy-grey = #584D62
eucaplyptus = #44FFA1
ghost-white = #FCF8FF
white = #FFFFFF
body
    margin: 0
    padding: 0
    box-sizing: border-box
header
    background: dark-purple
    display: flex
    justify-content: space-between
    flex-direction: column

.underline-btn
    body_text()
    font-weight: bold
    background-color: dark-purple
    color: white
    cursor: pointer
    transition-duration: 0.5s
    padding: 0
    padding-bottom: 4px
    border: none
    border-bottom: 3px solid eucaplyptus
    &:hover
        color: eucaplyptus

.square-btn
    body_text()
    margin: 30px auto
    background-color: eucaplyptus
    color: dark-purple
    cursor: pointer
    transition-duration: 0.5s
    padding: 10px 20px
    border: 2px solid eucaplyptus
    font-weight: bold
    &:hover
        color: eucaplyptus
        background-color: dark-purple

#logo-container
    display: flex
    justify-content: space-between
    margin 0 auto 70px
    max-width: 1110px
    img
        max-width: 95px
    padding: 40px 15px 0
    
    @media (min-width:768px)
        padding: 40px 50px 0
    @media (min-width:992)
        padding: 40px 100px 0
      
#slogan
    display: flex
    flex-direction: column
    overflow: hidden
h1
    heading_L()
    text-align: center
    margin: 0
    color white
    span
        position: relative
        .underline
            width: 100%
            position: absolute
            bottom: 0.6vw
            left: 0
            border-bottom: 3px solid eucaplyptus
#slogan-container
    position: relative
.bg-pattern
    position: absolute
    @media (max-width:576px)
        opacity: 0
.pos1
    left:-30vw
    top:-30%
    @media (min-width:992px)
        left: -10vw
    @media (min-width:1400px)
        left: 10vw
.pos2
    right:-10vw
    bottom:-110%
    @media (min-width:992px)
        right: 0
    @media (min-width:1400px)
        right: 10vw

#image-container
    position: relative
    margin-top: 15px
    height: 100%
    display: flex
    justify-content: center
    align-items: center
    custom-bottom-divier(40%, ghost-white)
#hero-img 
    padding-left: 10px
    z-index: 10
    width: 250px
    @media (min-width:350px)
        width: 320px
    @media (min-width:768px)
        width: 500px  
        padding-left: 15px  
    @media (min-width:1200px)
        width: 770px   
        padding-left: 20px  


#body-container 
    background-color: ghost-white
    color:dark-purple
    padding: 4vh 10vw 5vh
    
    position relative
    custom-bottom-divier(0%, white)
    display:flex
    flex-direction: column
    justify-content: space-evenly
    align-items: center
    @media (min-width:993px)
        align-items: flex-start
        flex-direction: row
        padding: 4vh 0 5vh
    @media (min-width:2000px)
        padding: 4vh 15vw 5vh
.part-wrapper
    display:flex
    justify-content: center
    align-items: center
    margin: 3vw 0
    flex-direction: column
    @media (min-width:500px) and (max-width 992px)
        flex-direction: row
    
h3
    heading_S()
    font-size: clamp(20px,2.7vw,32px)
.number-part
    heading_S()
    flex: 0 0 calc(clamp(20px,3vw,32px)*2)
    width: calc(clamp(20px,3vw,32px)*2)
    height: calc(clamp(20px,3vw,32px)*2)
    border-radius: 50%
    text-align: center
    border: 2px solid dark-purple
    @media (min-width:500px) and (max-width 992px)
        align-self: flex-start
        margin-top:60px
    
.letter-part
    // max-width: 400px
    text-align: center
    p 
        body_text()
        max-width: 400px
        @media (min-width:500px) and (max-width 992px)
            max-width: 700px
        @media (min-width:993px) and (max-width 1400px)
            max-width: 290px
        
    @media (min-width:500px) and (max-width 992px)
        padding-left: 5vw
        text-align: left

#bio-container
    background-color: white
    position: relative
    width: 90vw
    max-width: 1150px
    height: 650px
    margin: 100px auto 
    img
        position: absolute
        top: 0
        left:0
        right 0
        margin: 0 auto
        width: 90vw
        max-width: 280px   
    @media(min-width:320px)
        height: 600px
    @media(min-width:768px)
        height: 525px
        img
            width: 35vw
            max-width: 477px
            margin:0
    @media(min-width 992px)
        height: 575px

